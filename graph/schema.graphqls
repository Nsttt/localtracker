type Query {
  GetAllAnimes: [Anime!]!
  GetOneAnime(id: Int!): Anime!
}

type Mutation {
  CreateAnime(input: AnimeInput!): Anime!
  UpdateAnime(id: Int!, input: AnimeInput!): String!
  DeleteAnime(id: Int!): String!
}

