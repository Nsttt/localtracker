### ANIME ###

type Anime {
  id: ID!
  title: AnimeTitle!
  synonyms: [String]
  description: String
  startDate: FuzzyDate
  endDate: FuzzyDate
  season: AnimeSeason
  seasonYear: Int
  type: MediaType
  format: AnimeFormat
  status: MediaStatus
  episodes: Int
  duration: String
  isAdult: Boolean
  genre: String
  tag: [MediaTag]
  onList: Boolean
  isLicensed: Boolean
  licensedBy: String
  averageScore: Int
  popularity: Int
  source: MediaSource
  countryOfOrigin: String
  hashtag: String
  trailer: MediaTrailer
  updatedAt: Int
  coverImage: MediaCoverImage
  bannerImage: String
  characters: [String]
  staff: [String]
  studios: [String]
  nextAiringEpisode: [AiringSchedule]
  externalLinks: [MediaExternalLink]
}

type AnimeTitle {
  id: ID!
  userPreferred: String
  romaji: String
  english: String
  native: String
}

enum AnimeSeason {
  WINTER
  SPRING
  SUMMER
  FALL
}

enum AnimeFormat {
  TV
  TV_SHORT
  SPECIAL
  OVA
  ONA
}

